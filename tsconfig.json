{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "outDir": "./dist/js",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
